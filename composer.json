{
    "name": "acquia/headless_lightning",
    "type": "drupal-profile",
    "description": "Drupal Lightning as a backend for fully decoupled applications.",
    "license": "GPL-2.0-or-later",
    "require": {
        "acquia/lightning": "dev-8.x-3.x",
        "cweagans/composer-patches": "^1.6.4",
        "drupal-composer/drupal-scaffold": "^2.0.0"
    },
    "require-dev": {
        "drupal/drupal-extension": "^3.4",
        "drupal/facets": "^1.2",
        "drupal/schema_metatag": "^1.3",
        "webflo/drupal-core-require-dev": "*"
    },
    "config": {
        "platform": {
            "php": "7.0.8"
        },
        "preferred-install": {
            "drupal/core": "dist"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "enable-patching": true,
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "asset-packagist": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "dev": {
            "type": "github",
            "url": "https://github.com/acquia/lightning-dev",
            "no-api": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-install-cmd": [
            "@drupal-scaffold",
            "@push",
            "ln -s -f git-hooks/pre-commit .git/hooks/pre-commit"
        ],
        "post-update-cmd": [
            "@drupal-scaffold",
            "@push",
            "ln -s -f git-hooks/pre-commit .git/hooks/pre-commit"
        ],
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "install-drupal": [
            "rm -f ./docroot/sites/default/settings.php",
            "drush site:install headless_lightning --config drush.yml --yes",
            "chmod +w ./docroot/sites/default ./docroot/sites/default/settings.php"
        ],
        "nuke": "rm -r -f docroot vendor",
        "pull": "cp -R -f ./docroot/profiles/contrib/headless_lightning/* .",
        "push": [
            "rm -r -f ./docroot/profiles/contrib/headless_lightning",
            "mkdir -p ./docroot/profiles/contrib/headless_lightning",
            "@composer archive --file headless_lightning",
            "tar -x -f headless_lightning.tar -C ./docroot/profiles/contrib/headless_lightning",
            "rm headless_lightning.tar"
        ],
        "release-version": "Acquia\\Lightning\\Composer\\ReleaseVersion::execute"
    }
}
